{
  "name": "opensourcedesign-website",
  "version": "2.0.0",
  "description": "Website of the Open Source Design community",
  "scripts": {
    "dev": "concurrently \"npm run css:watch\" \"npm run hugo:dev\"",
    "build": "npm run css:build && npm run hugo:build",
    "css:build": "tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --minify",
    "css:watch": "tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --watch",
    "hugo:dev": "hugo server --buildDrafts --buildFuture",
    "hugo:build": "hugo --minify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opensourcedesign/opensourcedesign.github.io"
  },
  "keywords": ["open-source", "design", "community", "hugo"],
  "license": "AGPL-3.0",
  "homepage": "https://opensourcedesign.net",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.18"
  }
}
